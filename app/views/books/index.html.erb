<div>
  <%= render 'users/list', user:@user %>
</div>
<div>
  <header>
  <h1>Books</h1>
</header>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>>
    <% end %>
    </tr>
  </tbody>

</table>